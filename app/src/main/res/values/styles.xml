<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBannerTitle">
        <item name="android:textSize">@dimen/app_banner_title_text_size</item>
        <item name="android:textColor">@color/reference_white_60</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">1</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:paddingStart">@dimen/app_banner_title_padding_start</item>
        <item name="android:paddingEnd">@dimen/app_banner_title_padding_end</item>
    </style>
    <style name="AppTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="BannerViewInstallUpdateProgressBar">
        <item name="android:maxHeight">@dimen/install_progress_bar_height</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">@dimen/install_progress_bar_height</item>
    </style>

    <style name="ConfirmationDialog">
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowElevation">@dimen/dialog_z</item>
    </style>
    <style name="ConfirmationDialog.TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/reference_white_70</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="DefaultTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="ExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>

    <style name="PreferenceFragment">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="PreferenceFragment.Leanback">
        <item name="android:divider">@null</item>
    </style>
    <style name="PreferenceFragmentList">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="PreferenceFragmentList.Leanback">
        <item name="android:paddingBottom">34dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="PreferenceFragmentList.Material">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>
    <style name="PreferenceSummaryTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSecondary</item>
    </style>
    <style name="ProgramBadge">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:paddingStart">@dimen/program_badge_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/program_badge_padding_horizontal</item>
    </style>
    <style name="WatchNextInfoCardMessage">
        <item name="android:textColor">@color/watch_next_info_card_unfocused_color</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="WatchNextInfoCardTitle">
        <item name="android:textColor">@color/watch_next_info_card_unfocused_color</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.Leanback">
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_gravity">right|center_horizontal</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
