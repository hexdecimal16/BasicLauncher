<?xml version="1.0" encoding="utf-8"?>
<com.basic.android.basiclauncher.view.SearchView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_view"
    android:focusable="false"
    android:clickable="true"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/search_hint_text"
    android:importantForAccessibility="no">
    <LinearLayout
        android:gravity="left|center_vertical|center_horizontal|center|start"
        android:orientation="horizontal"
        android:id="@+id/search_orb"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no">
            <com.basic.android.basiclauncher.view.SearchAssistant
                android:id="@+id/micLay"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/top_row_button_margin_bottom">
                <View
                    android:layout_gravity="center"
                    android:id="@+id/button_background_mic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/mic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_google_assistant"
                    android:contentDescription="@string/mic_disabled_icon_content_description" android:layout_marginStart="@dimen/mic_disabled_icon_margin" android:layout_marginEnd="@dimen/mic_disabled_icon_margin"/>
            </com.basic.android.basiclauncher.view.SearchAssistant>
            <TextSwitcher
                android:layout_gravity="center_vertical"
                android:id="@+id/text_switcher"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:measureAllChildren="false"
                android:importantForAccessibility="noHideDescendants"
                android:layout_marginStart="@dimen/search_text_margin_start"/>
        </LinearLayout>
    </LinearLayout>
</com.basic.android.basiclauncher.view.SearchView>
