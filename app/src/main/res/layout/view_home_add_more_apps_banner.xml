<?xml version="1.0" encoding="utf-8"?>
<com.basic.android.basiclauncher.favorite.AddView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/favorite_add_app_banner"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="@dimen/home_app_banner_width"
    android:layout_height="@dimen/home_app_banner_height"
    android:layout_marginTop="@dimen/home_app_banner_default_margin_top"
    android:layout_marginBottom="@dimen/home_app_banner_default_margin_bottom"
    android:contentDescription="@string/favorite_more_apps"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="@dimen/home_app_banner_default_margin_horizontal">
    <ImageView
        android:layout_gravity="top"
        android:id="@+id/banner_add_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_app_banner_image_height"
        android:src="@drawable/add_favorite_app"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/app_add_title"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/favorite_more_apps"
        style="@style/AppBannerTitle"/>
</com.basic.android.basiclauncher.favorite.AddView>