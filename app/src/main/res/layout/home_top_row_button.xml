<?xml version="1.0" encoding="utf-8"?>
<com.basic.android.basiclauncher.home.HomeTopRowButton
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:focusable="true"
    android:nextFocusRight="@id/settings"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="@dimen/top_row_item_size"
    android:layout_height="@dimen/top_row_item_size"
    android:layout_marginEnd="@dimen/top_row_item_spacing">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/top_row_item_size"
        android:layout_height="@dimen/top_row_item_size"
        android:layout_marginBottom="@dimen/top_row_button_margin_bottom">

        <ImageView
            android:id="@+id/ivSettingsBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivSettingsIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/reference_white_60"
            android:src="@drawable/ic_action_settings_white"
            android:tintMode="src_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include android:id="@+id/settings_title" layout="@layout/home_top_row_button_title"/>
</com.basic.android.basiclauncher.home.HomeTopRowButton>
